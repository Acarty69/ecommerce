{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="row border border-dark m-3">
        <h1>username :{{ app.user.username }}</h1>
        <h3>prenom : {{ app.user.profile.prenom }}</h3>
    <h2>nom :{{ app.user.profile.nom }}</h2>
    <h3>email:{{ app.user.profile.email }}</h3>
        {% for adresse in app.user.profile.adresses %}
        <h3>Adresse : {{ adresse.numero }} {{ adresse.rue }} {{ adresse.codepostal }} {% if adresse.type %} billing {% else%} shipping {% endif%} </h3>
            <a class="btn btn-primary" href="{{ path('update_adresse', {id:adresse.id}) }}">Modifier adresse</a>
            <a class="btn btn-danger" href="{{ path('delete_adresse', {id:adresse.id}) }}">Delete adresse</a>


        {% endfor %}
    </div>
    <div class="row border border-dark m-3">
    </div>
        <a class="btn btn-primary" href="{{ path('update_profile', {id:app.user.profile.id}) }}">Update Profile</a>
        <a class="btn btn-primary" href="{{ path('add_addresse',{id:app.user.profile.id})}}">new adresse</a>
    </div>
</div>
{% endblock %}
